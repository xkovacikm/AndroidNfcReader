<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/customer_id"
        android:text="Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/customer_card_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card id"
        android:layout_below="@+id/customer_id"/>
    <EditText
        android:id="@+id/customer_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost"
        android:layout_below="@+id/customer_card_id"/>
    <Button
        android:id="@+id/customer_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save customer"
        android:onClick="editCustomer"
        android:layout_below="@+id/customer_money"
    />
    <Button
        android:id="@+id/customer_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete customer"
        android:onClick="deleteCustomer"
        android:layout_below="@+id/customer_save"
    />
</RelativeLayout>